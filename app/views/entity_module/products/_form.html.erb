<%= form_with(model: [:entity, product]) do |form| %>
  <div class='card'>
    <div class='card-body'>
      <%= render 'shared/errors_messages', resource: product %>

      <div class='form-group'>
        <%= form.label :name, clas: 'form-label' %>
        <%= form.text_field :name, class: 'form-control', autofocus: true %>
      </div>

      <div class='row'>
        <div class="col-md">
          <div class="form-group">
            <%= form.label :price_cents, clas: 'form-label' %>

            <div class="input-group mb-3">
              <span class="input-group-text">R$</span>
              <%= form.text_field :price_cents, class: 'form-control' %>
              <span class="input-group-text">.00</span>
            </div>
          </div>
        </div>

        <div class="col-md">
          <div class="form-group">
            <%= form.label :discount, clas: 'form-label' %>

            <div class="input-group mb-3">
              <%= form.text_field :discount, class: 'form-control' %>
              <span class="input-group-text">%</span>
            </div>
          </div>
        </div>

        <div class="col-md">
          <div class='form-group'>
            <%= form.label :category_ids, clas: 'form-label' %>
            <%= form.select :category_ids, options_for_select(Category.pluck(:name, :id), selected: product.category_ids), {}, { multiple: true, class: 'form-select' } %>
          </div>
        </div>
      </div>

      <div>
        <%= form.submit 'Salvar', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
