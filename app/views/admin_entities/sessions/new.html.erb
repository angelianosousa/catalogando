<div class="card border-dark">
  <div class="card-body m-4">
    <div class="form-sign w-100 m-auto">
      <h2 class="h3 mb-3 fw-normal">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render 'admin_entities/shared/error_messages', resource: resource %>

        <div class="form-floating">
          <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: 'email' %>
          <%= f.label :email, for: "admin_entity_email" %><br />
        </div>

        <div class="form-floating">
          <%= f.password_field :password, class: 'form-control', autocomplete: 'current-password' %>
          <%= f.label :password, for: "admin_entity_password" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-dark w-100 mt-3' %>
        </div>
      <% end %>

      <div class="text-center">
        <p class="mt-5 mb-3 text-body-secondary">&copy; <%= Date.today.year %></p>
      </div>
    </div>
  </div>
</div>
